{
  "name": "website-theme-switcher",
  "version": "1.2.2",
  "description": "A lightweight, framework-agnostic JavaScript library for seamless theme switching between light and dark modes",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "unpkg": "dist/index.umd.js",
  "jsdelivr": "dist/index.umd.js",
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "FRAMEWORK_INSTALLATION.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "clean": "rimraf dist",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "demo": "cd demo && python3 -m http.server 8000",
    "test-demo": "python3 -m http.server 8001"
  },
  "keywords": [
    "theme",
    "dark-mode",
    "light-mode",
    "theme-switcher",
    "css-variables",
    "tailwind",
    "bootstrap",
    "react",
    "vue",
    "angular",
    "svelte",
    "framework-agnostic",
    "typescript",
    "accessibility"
  ],
  "author": {
    "name": "Triotrix Tech Solutions",
    "email": "info@triotrix.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mnahsanofficial/website-theme-switcher.git"
  },
  "bugs": {
    "url": "https://github.com/mnahsanofficial/website-theme-switcher/issues"
  },
  "homepage": "https://github.com/mnahsanofficial/website-theme-switcher#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@types/jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^30.0.5",
    "rimraf": "^5.0.0",
    "rollup": "^3.0.0",
    "rollup-plugin-dts": "^5.0.0",
    "size-limit": "^8.0.0",
    "ts-jest": "^29.0.0",
    "tslib": "^2.0.0",
    "typescript": "^5.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
